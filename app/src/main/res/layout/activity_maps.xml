<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <!--<variable-->
        <variable
            name="text"
            type="String"/>
        <!--name="viewModel"-->
        <!--type="com.example.vvoitsekh.databindinglivedata.tasks.TasksViewModel"/>-->
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <fragment xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.example.vvoitsekh.googlemapskyivsights.MapsActivity">


                <!--<Button-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="hello"-->
                <!--/>-->
            </fragment>

            <Button
                android:id="@+id/search_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="#80FFFFFF"
                android:onClick="findPaths"
                android:text="@string/findRoute" />

            <EditText
                android:id="@+id/editTime"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_above="@id/search_button"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:inputType="numberDecimal"
                android:text="5"
                android:minLines="1"
                android:visibility="visible" />

        </RelativeLayout>

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_weight="3" />
    </LinearLayout>

</layout>